<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:map="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/board_shuttle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">


    <RelativeLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/eta_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Expected Time Message Here"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>
        </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/time_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Current Time Message Here"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/nxt_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Next Shuttle Message Here"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        >

        <Button
            android:id="@+id/button22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:fadingEdge="horizontal|vertical"
            android:hint="App tracks your location!"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="Report Delay"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>
